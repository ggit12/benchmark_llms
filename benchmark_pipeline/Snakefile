        'res/04_figure_2_and_table_2/average_pairwise_kappa.svg',
        'res/04_figure_2_and_table_2/performance_table.html',
    resources:
        partition="cpu",
        mem="400G",
        cpus=30,
        runtime=300,
        ntasks=1,
    shell:
        "python scripts/04_figure_2_and_table_2.py"

