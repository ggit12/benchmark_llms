"""
Snakefile for benchmark_pipeline. Limits concurrent models per provider to 1.

To add a new model for an existing provider, just add it to ENDPOINTS in providers.py.
"""
# pylint: disable=syntax-error

import os
import sys

from dotenv import load_dotenv
load_dotenv()

source_dir = os.environ["SOURCE_DIR"]
sys.path.append(source_dir)

from src import PROVIDERS, ENDPOINTS

rule all:
    input:
        #to trigger o1, o2, o3, o4, o5, o6, o7, o8
        'res/08_figure_5/confusion_matrix_for_cells_topleft_of_agreement.svg',

        #to trigger o5
        "res/05_figure_s1/done",

        #to trigger o6
        "res/06_figure_3_and_s2/agreement_plots_by_tissue_celltype_top_celltypes_done", # Uses a done file because the specific file names may change (if the top models are different) and are not used downstream
        # These files below won't run unless on the bigger object
        "res/06_figure_3_and_s2/stromal_module_umap_in_stromal_cells.svg",


rule o1_preprocess_ts2:
    input:
        os.environ["INPUT_DATA"]
    output:
        directory("dat/preprocessed_tissue_adt_ts2")
    resources: # sbatch flag to which snakemake maps
        partition="cpu", # --partition
        mem="800G", # --mem
        # cpus=30, # --cpus-per-task
        runtime=240, # --time
        tasks=1, # --ntasks
    shell:
        "python scripts/01_preprocess_ts2.py"


rule o2_run_openai:
    input:
        "dat/preprocessed_tissue_adt_ts2"
    output:
        expand("res/02_run_provider/{provider}_{model}.pkl", provider="openai", model=ENDPOINTS.endpoints["openai"])
    resources:
        partition="cpu",
        mem="800G",
        # cpus=30,
        runtime=480,
        ntasks=1,
    params:
        provider="openai",
        outdir="res/02_run_provider"
    shell:
        "python scripts/02_run_provider.py \
        --provider {params.provider} \
        --input {input} \
        --outdir {params.outdir}"

rule o2_run_anthropic:
    input:
        "dat/preprocessed_tissue_adt_ts2"
    output:
        expand("res/02_run_provider/{provider}_{model}.pkl", provider="anthropic", model=ENDPOINTS.endpoints["anthropic"])
    resources:
        partition="cpu",
